<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/kupon_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="Kupon Başlama Zamanı:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/kupon_tarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="20:00 - 05.12.2019"
                android:textSize="12dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginLeft="3dp"
            android:paddingTop="35dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kupon_mac_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="15.10.2019 20:00 Fenerbahçe - Galatasaray M.S: 2-1 --> Oran: X.XX"
                android:textSize="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/kupon_mac_2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="15.10.2019 20:00 Fenerbahçe - Galatasaray M.S: 2-1 --> Oran: X.XX"
                android:textSize="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/kupon_mac_3"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="15.10.2019 20:00 Fenerbahçe - Galatasaray M.S: 2-1 --> Oran: X.XX"
                android:textSize="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/kupon_mac_4"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="15.10.2019 20:00 Fenerbahçe - Galatasaray M.S: 2-1 --> Oran: X.XX"
                android:textSize="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/kupon_mac_5"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="15.10.2019 20:00 Fenerbahçe - Galatasaray M.S: 2-1 --> Oran: X.XX"
                android:textSize="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/kupon_mac_6"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="15.10.2019 20:00 Fenerbahçe - Galatasaray M.S: 2-1 --> Oran: X.XX"
                android:textSize="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/kupon_mac_7"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="15.10.2019 20:00 Fenerbahçe - Galatasaray M.S: 2-1 --> Oran: X.XX"
                android:textSize="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/kupon_mac_8"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="15.10.2019 20:00 Fenerbahçe - Galatasaray M.S: 2-1 --> Oran: X.XX"
                android:textSize="10dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/kupon_mac_9"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="15.10.2019 20:00 Fenerbahçe - Galatasaray M.S: 2-1 --> Oran: X.XX"
                android:textSize="10dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="5dp"
            android:layout_below="@id/linear_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toplam:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/toplam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="47.12"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>